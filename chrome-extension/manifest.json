{
  "manifest_version": 3,
  "name": "Instagram Data Collector",
  "version": "1.0",
  "description": "Collect Instagram data from browser",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "cookies"
  ],
  "host_permissions": [
    "https://*.instagram.com/*",
    "http://localhost:3000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.instagram.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
} 